<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginBottom="50dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_pager_desc"

        android:text="@string/app_name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_desc"
        android:layout_width="match_parent"
        android:layout_height="400dp"

        android:padding="20dp"
        android:foregroundGravity="center"

        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/tab_layout"
        />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"

        app:layout_constraintTop_toBottomOf="@id/view_pager_desc"
        />

    <LinearLayout
        android:id="@+id/btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layer_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_start"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/layout_bg"
                android:text="@string/start"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layer_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_policy"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/layout_bg"
                android:layout_marginEnd="20dp"
                android:text="@string/policy"/>
            <Button
                android:id="@+id/btn_restore"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/layout_bg"
                android:text="@string/restore"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>